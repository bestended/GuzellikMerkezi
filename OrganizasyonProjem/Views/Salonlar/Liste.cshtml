@model IEnumerable<OrganizasyonProjem.Models.SalonlarSet>

@{
    ViewBag.Title = "Layoutt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liste</title>
</head>
<body>

    <div style="margin-bottom:10px;">
        @Html.ActionLink("Salon Ekle", "GorevliEY", null, new { @class = "btn btn-primary" })
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalonAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalonKapiNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YapilanIslem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IslemSayisi)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SalonAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalonKapiNo)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.YapilanIslem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IslemSayisi)
                </td>
           
                <td>
                    @Html.ActionLink("Güncelle", "GorevliEY", new { id = item.SalonNo }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Sil", "Sil", new { id = item.SalonNo }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
